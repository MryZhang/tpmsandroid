<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_item_sms"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/image_icon_avatar"
        android:layout_width="@dimen/item_icon_sms_width_height"
        android:layout_height="@dimen/item_icon_sms_width_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/item_sms_margin_left" />

    <RelativeLayout
        android:id="@+id/relative_message_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/image_icon_avatar">

        <com.ethan.morephone.widget.MyTextView
            android:id="@+id/text_message_body"
            style="@style/TextMessageBody"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="0dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/message_sent_2" />

        <com.ethan.morephone.widget.MyTextView
            android:id="@+id/text_message_time"
            style="@style/TextSmsTime"
            android:layout_below="@+id/text_message_body"
            android:layout_alignParentRight="true" />

        <com.ethan.morephone.widget.progress.DotProgressBar
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_bar"
            android:layout_width="50dp"
            android:layout_height="11dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/text_message_time"
            android:layout_margin="@dimen/activity_vertical_margin"
            custom:amount="3"
            android:visibility="gone"
            custom:endColor="@color/green_400"
            custom:startColor="@color/green_700" />

    </RelativeLayout>
</RelativeLayout>