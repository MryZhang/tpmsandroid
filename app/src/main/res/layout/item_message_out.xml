<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_item_sms"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.ethan.morephone.widget.MyTextView
        android:id="@+id/text_message_time"
        style="@style/TextMessageTime" />


    <ImageView
        android:id="@+id/image_icon_avatar"
        android:layout_width="@dimen/item_icon_sms_width_height"
        android:layout_height="@dimen/item_icon_sms_width_height"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_message_time"
        android:layout_marginRight="@dimen/item_sms_margin_left"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <com.udevel.widgetlab.TypingIndicatorView
        android:id="@+id/typing_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/image_icon_avatar"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:padding="4dp"
        app:animateFrequency="500"
        app:animationOrder="sequence"
        app:backgroundColor="#eaeaea"
        app:backgroundType="rounded"
        app:dotAnimationDuration="2000"
        app:dotAnimationType="Grow"
        app:dotColor="@color/colorPrimary"
        app:dotCount="3"
        app:dotHorizontalSpacing="4dp"
        app:dotMaxCompressRatio="70%"
        app:dotSecondColor="#a4a4a4"
        app:dotSize="6dp"
        app:showBackground="true" />

    <RelativeLayout
        android:id="@+id/relative_message_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_message_time"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toLeftOf="@+id/image_icon_avatar">


        <com.ethan.morephone.widget.MyTextView
            android:id="@+id/text_message_body"
            style="@style/TextMessageBody"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:background="@drawable/message_sent_2" />

        <ImageView
            android:id="@+id/image_message_fail"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_list_alert_sms_failed"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/text_message_body"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/image_message_resend"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/selector_button_resend"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/text_message_body"
            android:visibility="invisible"/>

    </RelativeLayout>
</RelativeLayout>