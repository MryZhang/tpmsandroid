<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ethan.morephone.widget.MyTextView
                android:id="@+id/text_payment_methods"
                style="@style/TextPaymentDisplay"
                android:text="@string/payment_methods" />

            <com.ethan.morephone.widget.MyTextView
                android:id="@+id/text_payment_visa"
                style="@style/TextPaymentItem"
                android:layout_below="@+id/text_payment_methods"
                android:layout_marginTop="36dp"
                android:text="VISA ***** 0011"
                android:drawableLeft="@drawable/ic_credit_card"
                android:drawablePadding="@dimen/activity_vertical_margin"/>

            <View
                android:id="@+id/view_divider_1"
                style="@style/Divider"
                android:layout_below="@+id/text_payment_visa" />

            <com.ethan.morephone.widget.MyTextView
                android:id="@+id/text_payment_paypal"
                style="@style/TextPaymentItem"
                android:layout_below="@+id/view_divider_1"
                android:text="Paypal"
                android:drawableLeft="@drawable/ic_credit_card"
                android:drawablePadding="@dimen/activity_vertical_margin"/>

            <View
                android:id="@+id/view_divider_2"
                style="@style/Divider"
                android:layout_below="@+id/text_payment_paypal" />

            <com.ethan.morephone.widget.MyTextView
                android:id="@+id/text_payment_add"
                style="@style/TextPaymentItem"
                android:layout_below="@+id/view_divider_2"
                android:text="Add Card"
                android:drawableLeft="@drawable/ic_credit_card"
                android:drawablePadding="@dimen/activity_vertical_margin"/>

            <View
                android:id="@+id/view_divider_3"
                style="@style/Divider"
                android:layout_below="@+id/text_payment_add" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>