<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinator_layout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundBlue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/tool_bar_blue" />

        <com.ethan.morephone.widget.MyTextView
            android:id="@+id/text_log_in_title"
            style="@style/TextAuthenticationTitle"
            android:layout_below="@+id/tool_bar"
            android:text="@string/text_login_title" />

        <com.ethan.morephone.widget.MyTextView
            android:id="@+id/text_log_in_email"
            style="@style/TextAuthenticationField"
            android:layout_below="@+id/text_log_in_title"
            android:layout_marginTop="@dimen/text_authentication_field_margin_top"
            android:text="@string/text_login_email" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edit_text_email"
            style="@style/EditTextAuthentication"
            android:layout_below="@+id/text_log_in_email"
            android:inputType="textEmailAddress" />

        <com.ethan.morephone.widget.MyTextView
            android:id="@+id/text_log_in_password"
            style="@style/TextAuthenticationField"
            android:layout_below="@+id/edit_text_email"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/text_login_password" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edit_text_password"
            style="@style/EditTextAuthentication"
            android:layout_below="@+id/text_log_in_password"
            android:inputType="textPassword" />


    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/button_next_step"
        style="@style/ViewCommon"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_arrow_right_green"
        app:backgroundTint="@color/colorMainDark" />
</android.support.design.widget.CoordinatorLayout>